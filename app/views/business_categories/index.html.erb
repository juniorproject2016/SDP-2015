<h1>Listing business_categories</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_categories.each do |business_category| %>
      <tr>
        <td><%= business_category.business_id %></td>
		<td><%= business_category.business.name %></td>
        <td><%= business_category.category_id %></td>
		<td><%= business_category.category.name %></td>
        <td><%= link_to 'Show', business_category %></td>
        <td><%= link_to 'Edit', edit_business_category_path(business_category) %></td>
        <td><%= link_to 'Destroy', business_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

