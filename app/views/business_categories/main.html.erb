<div class="hero-unit">


<h1>Businesses</h1>
<%= will_paginate %>

<table class="table table-bordered">
  <thead>
    <tr>
	  <th>Business name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_categories.each do |bc| %>
      <tr>
	    <td><%= link_to bc.business.name, business_path(bc.business_id) %></td>
        <td><%= link_to bc.category.name, category_path(bc.category_id) %></td>
		</tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>

  </div>